<!DOCTYPE html>
<html ng-app="homeApp">

<head>
    <script data-require="angular.js@*" data-semver="1.3.5" src="https://code.angularjs.org/1.3.5/angular.js"></script>
     <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.10.0.js"></script>
    <script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://apis.google.com/js/platform.js"></script>

    <script src="javascripts/homeController.js"></script>
    <script src="/node/angular-route/angular-route.js"></script>
    <script src="/node/ng-file-upload/dist/ng-file-upload.js"></script>
    <!--infiniteScrolling-->

    <script type='text/javascript' src='/node/ng-infinite-scroll/build/ng-infinite-scroll.min.js'></script>

    <!--stylesheet-->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="./stylesheets/home.css"/>
</head>

<body ng-controller="presentationController">


<nav class="navbar navbar-default navbar-fixed-top">

    <div class="navbar-header">
        <a class="navbar-brand" href="/home">EPickPlace</a>
    </div>
    <ul class="nav navbar-nav">
        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown">YOU <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a href="/home/profile">Profile</a></li>
                <li><a href="/home/albums">Albums</a></li>

                <!--<li><a href="#">Page 1-3</a></li>-->
            </ul>
        </li>
            <li class="dropdown"><a id="not" class="dropdown-toggle" data-toggle="dropdown">
                <div id="case">
                <img id="imgplane" src="/images/paper_airplane_silver.png">
                    <span id="notification">{{count}}</span>

                </div>
                </a>
                    <ul class="dropdown-menu" id="notifications">
                        <li ng-repeat="a in aa" ng-click="openTrip($index)">

                            <p ng-style="(!Boolean(a.read)) && {'font-weight':'bold'}"> {{a.title}}</p>

                        </li>
                    </ul>
             </li>
        <!--<li><a href="#">Page 2</a></li>-->
    </ul>
    <img  class="circle" src="/images/pick.jpg" ng-click="showModal()">
</nav>
<div class="modal fade" id="modalTrip" tabindex="-1" role="dialog" aria-labelledby="modalOneLabel" >

    <div class="modal-dialog" style="width:100%;height:100%;margin:0px">

        <div class="modal-content  bg-info" style="width:100%;height:100%" >
            <div class="modal-body"  style="overflow: auto;width:96%;height:100%;background-color: floralwhite">

                <div id="r1">
                    <span ng-bind="trip.planification.title"></span>
                    <span style="float:right" ng-bind="name_planner"></span>
                </div>

                <div id="r2">
                    <li ng-repeat="friend in trip.planification.added_friends">
                        <img id="friend_pic" ng-src="{{friend.image}}">
                        <span ng-bind="friend.newField"></span>
                    </li>

                </div>
                <div id="r3">
                    <span ng-bind="trip.planification.message"></span>
                </div>
                <div id="r4">
                    Recommended hosts:<a href="#" ng-click="goToHost()">host</a>
                    Recommended album:<a href="#" ng-click="goToAlbum()">album</a>
                </div>
                <div id="r5">
                    <button type="button" class="btn btn-primary">Accept</button>
                    <button type="button" class="btn btn-info">Decline</button>
                </div>
            </div>
           
        </div>


    </div>
</div>
       <div ng-view></div>

</body>

</html>