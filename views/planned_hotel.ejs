<!DOCTYPE html>
<html ng-app="myApp">

<head>
    <script data-require="angular.js@*" data-semver="1.3.5" src="https://code.angularjs.org/1.3.5/angular.js"></script>
    <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.10.0.js"></script>
    <script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script class="cssdeck" src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
 <script src="../javascripts/planned_hotelController.js"></script>
    <script src="/node/angular-route/angular-route.js"></script>
    <script src="/node/ng-file-upload/dist/ng-file-upload.js"></script>
    <!--infiniteScrolling-->
    <link rel="shortcut icon" href="../favicon.ico">
    <link rel="stylesheet" type="text/css" href="../stylesheets/demo.css" />
    <link rel="stylesheet" type="text/css" href="../stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="../stylesheets/elastislide.css" />
    <link rel="stylesheet" type="text/css" href="../stylesheets/reset.css" />
    <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow&v1' rel='stylesheet' type='text/css' />
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css' />



    <script type="text/javascript" src="../bower_components/scripts/jquery.tmpl.min.js"></script>
    <script type="text/javascript" src="../bower_components/scripts/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="../bower_components/scripts/jquery.elastislide.js"></script>
    <script type="text/javascript" src="../bower_components/scripts/gallery.js"></script>


    <script type='text/javascript' src='/node/ng-infinite-scroll/build/ng-infinite-scroll.min.js'></script>

    <!--stylesheet-->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="../stylesheets/planatrip.css"/>


</head>

<body>
<div class="row">
    <div class="col-md-3 col-left"></div>
    <div class="col-md-6">
        <div id="header">

            <ul id="ulist">
                <li ng-repeat="hotel in hotels track by $index" >
                    <input id="check" type="checkbox" ng-checked="hotels[$index].checked" ng-click="check($index)"/>
                    <div id="wrap" ng-click="showModal($index)">
                        <div class="col-md-4">
                            <img id="imghot" ng-src="{{hotel.picture.url}}">
                        </div>
                        <div class="col-md-8">
                            <p style="color:white">{{hotel.name}}</p>
                            <p style="color:#4d90fe;">{{hotel.distance| number : 2}} km</p>
                            <a href="{{hotel.link}}" style="color:#4d90fe;">{{hotel.link}}</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>

        <div class="modal fade" id="modalHotel" tabindex="-1" role="dialog" aria-labelledby="modalOneLabel" >

            <div class="modal-dialog" style="width:100%;height:100%;margin:0px">

                <div class="modal-content  bg-info" style="width:100%;height:100%" >
                    <div class="modal-body"  style="overflow: auto;width:100%;height:100%;background-color: rgba(1,1,1,0.8)">

                        <div id="top">
                            <div class="col-md-4">
                                <img id="cover" ng-src="{{displayed_picture}}">
                            </div>
                            <div class="col-md-8">
                                <div id="up">
                                    <p style="color:white">{{hotels[index].name}}</p>
                                    <p style="color:white">{{hotels[index].location}}</p>
                                    <p style="color:white">{{hotels[index].distance|number:2}} km</p>
                                    <p style="color:white">{{hotels[index].prefix}}{{hotels[index].phone}}</p>
                                    <p style="color:white">{{hotels[index].email}}</p>
                                </div>
                                <div id="down">
                                    <ul>
                                        <li ng-style="hotels[index].pictures[$index].isSelected &&{'box-shadow': '1px 1px 2px 2px #4d90fe'}"
                                            id="thumbnail" ng-click="selectPicture($index)" ng-repeat="pic in hotels[index].pictures">
                                            <img ng-src="{{pic.url}}">
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div id="botto">

                            <div class="half1">
                                <ul>

                                    <li  ng-style="{'box-shadow':'2px 2px 2px 2px black'}" style="height: 30px;:hover:arrow;"
                                         ng-repeat="room in hotels[index].rooms track by $index">
                                        -->                             <div class="col-md-4">
                                            <p style="color: white">{{room.name}}</p>
                                        </div>
                                        <div class="col-md-4">
                                            <span style="color: white">{{room.price}}</span>
                                        </div>
                                    </li>

                                </ul>
                                -->
                            </div>
                            <div class="half2">
                                <ul>

                                    <li  ng-style="{'box-shadow':'2px 2px 2px 2px black'}" style="height: 30px;:hover:arrow;"
                                         ng-repeat="ame in hotels[index].amenities track by $index" ng-show="ame.name">
                                        -->                             <div class="col-md-4">
                                            <p style="color: white">{{ame.name}}</p>
                                        </div>

                                    </li>

                                </ul>
                            </div>

                        </div>

                    </div>
                </div>


            </div>
        </div>

    </div>
    <div class="col-md-3 col-right"></div>
</div>

<div id="bottom">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="color" style="float: left">
            <!--<span class="glyphicon glyphicon-chevron-left"></span>
            <a href="#/"><p style="display: inline;">Pick resort</p></a>-->
        </div>
        <div class="color" style="float: right">
            <!--<a href="#/friends"> <p style="float: left;display: inline">Pick travellers</p></a>
            <span style="float: right;display: inline-block" class="glyphicon glyphicon-chevron-right"></span>-->
        </div>

    </div>
    <div class="col-md-3"></div>
</div>

</body>
</html>